{% macro email(value) %}
  <span class="whitespace-nowrap px-2.5 py-0.5 rounded text-blue-700 bg-blue-100 hover:bg-blue-200 text-center">
    <a href="mailto:{{ value }}">{{ value }}</a>
  </span>
{% endmacro %}

{% macro phone(value) %}
  <span class="whitespace-nowrap px-2.5 py-0.5 rounded text-blue-700 bg-blue-100 hover:bg-blue-200 text-center">
    <a href="tel:{{ value }}">{{ value }}</a>
  </span>
{% endmacro %}

{% macro optIn(value, context) %}
  {% if context == 'table' %}
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
         class="inline-block mx-auto bi bi-circle" viewBox="0 0 16 16">
      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
      {% if value %}
        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
      {% endif %}
    </svg>
    {% else %}
      {{ value ? 'Oui' : 'Non' }}
    {% endif %}
{% endmacro %}

{% macro quota(userValue, mustDoValue, context) %}
  {% set ratio = (userValue/mustDoValue)*100 %}
  <span class="inline-block {{ color_ratio(ratio) }} {% if context == 'table' %}mt-2 mr-2 py-0.5{% endif %} px-2.5 rounded">
    {{ userValue }} / {{ mustDoValue }}
  </span>
{% endmacro %}

