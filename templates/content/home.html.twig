{% set containerDiv = false %}

{% block body %}
  <div class="grid lg:h-[calc(100vh-124px)] home pb-20 lg:pb-0">
    <div class="lg:flex flex-row lg:space-x-16">
      <div class="flex text-center mt-8 lg:mt-0 lg:basis-1/3">
        <div class="m-auto">
          <img class="mx-auto w-2/12 lg:w-3/12" src="{{ asset('img/Frigodons.png') }}" alt="Frig'o dons">
          <h1 class="lg:hidden pb-0">Frig'o dons</h1>
          <h2 class="lg:hidden origin-top-left rotate-2 mb-6 text-md">Ne jetez plus, partagez !</h2>
